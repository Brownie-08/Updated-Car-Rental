# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=127.0.0.1,localhost

# Database Configuration
DB_ENGINE=django.db.backends.mysql
DB_NAME=b_rental
DB_USER=root
DB_PASSWORD=your-db-password
